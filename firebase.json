{
  "hosting": {
    "public": "dist/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://your-cloud-run-url.run.app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
